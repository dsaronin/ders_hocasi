%h5 Select an entry from #{@settings[:source]}
= form('/source', method=:post) do |f|
  = f.label(:entry, 'Source entry:&emsp;')
  = f.select(:entry, @key_list, {:value => @entry_def } )
  = link_to( 'cancel', "/", { :id => "cancel", :title => "cancel setting changes" } )
  = submit( 'player', :value => 'flashcards »' )
  = f.label(:side, '&emsp;')
  = submit( 'lists',  :value => 'lists »' )
 
